<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/view_padding"
    android:paddingBottom="@dimen/view_padding"

    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardBackgroundColor="@color/card_background_color"
    card_view:cardElevation="@dimen/elevation_size"
    android:id="@+id/cv_note_id">
    <RelativeLayout
        android:id="@+id/rl_note_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:textStyle="bold"
            android:id="@+id/tv_title_id"
          />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_id"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_padding"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="21.06.2016"
            android:textColor="@color/colorYellow"
            android:background="@color/background_color"
            android:id="@+id/tv_datetime_id" />

    </RelativeLayout>

</android.support.v7.widget.CardView>