<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/message_item_size"
    android:id="@+id/layout_item_id"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_size"
    android:layout_marginBottom="@dimen/padding_size"
    android:background="@color/colorMessageBackground"
    >

    <ImageView
        android:id="@+id/letter_id"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:background="@color/colorTextBackground"
        />
     <TextView
         android:id="@+id/title_id"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="@dimen/margin_size"
         android:textSize="@dimen/text_title_size"
         android:layout_toRightOf="@id/letter_id"
         android:gravity="center_vertical"
         android:textColor="@color/colorText"
         tools:text="Message"
          />


</RelativeLayout>