<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="ru.ivadimn.android0108.activities.DescriptionActivity">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/padding_size"
        android:paddingBottom="@dimen/padding_size"
        card_view:cardCornerRadius="@dimen/margin_size"
        card_view:cardBackgroundColor="@color/background_color"
        card_view:cardElevation="@dimen/activity_horizontal_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/card_background_color"
                android:text="Large Text"
                android:id="@+id/text_name_id"
                android:layout_marginBottom="@dimen/margin_size"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    android:id="@+id/image_id"
                    android:background="@color/background_color"
                    android:layout_marginLeft="@dimen/margin_size"
                    android:layout_marginBottom="@dimen/margin_size"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin_size"
                    android:layout_marginRight="@dimen/margin_size"
                    android:layout_marginBottom="@dimen/margin_size"
                    card_view:cardCornerRadius="@dimen/margin_size"
                    card_view:cardBackgroundColor="@color/card_background_color">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/margin_size"
                        android:background="@color/card_background_color"
                        android:id="@+id/scrollView">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="@dimen/margin_size"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Medium Text"
                            android:textAlignment="center"
                            android:id="@+id/text_description_id"
                            />
                    </ScrollView>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>