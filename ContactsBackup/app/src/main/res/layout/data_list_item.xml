<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_main_id"
        android:layout_margin="@dimen/view_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/number_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="+7 926 206-89-89"
        />
    <TextView
        android:id="@+id/tv_type_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        android:textSize="@dimen/number_type_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id"
        tools:text="Моб."
        />

    <TextView
        android:id="@+id/tv_dop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        android:textSize="@dimen/number_type_text_size"
        app:layout_constraintLeft_toRightOf="@id/tv_type_id"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id"
        tools:text="Доп."
        />

</android.support.constraint.ConstraintLayout>