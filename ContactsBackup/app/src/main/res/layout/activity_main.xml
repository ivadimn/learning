<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ivadimn.contactsbackup.activities.MainActivity">

    <Button
        android:id="@+id/btn_contacts_id"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_contacts"
        android:onClick="showContacts"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_rawcontacts_id"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_raw_contacts"
        app:layout_constraintTop_toBottomOf="@+id/btn_contacts_id"
        android:onClick="showRawContacts"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
