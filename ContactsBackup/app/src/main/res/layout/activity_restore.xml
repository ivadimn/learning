<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ivadimn.contactsbackup.activities.RestoreActivity">
    <TextView
        android:id="@+id/tv_titlegiven_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/family"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_given_id"
        />
    <EditText
        android:id="@+id/tv_given_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        app:layout_constraintLeft_toRightOf="@id/tv_titlegiven_id"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_titlefamily_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_family_id"
        />
    <EditText
        android:id="@+id/tv_family_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_padding"
        app:layout_constraintLeft_toRightOf="@id/tv_titlefamily_id"
        app:layout_constraintTop_toBottomOf="@id/tv_given_id"/>

    <TextView
        android:id="@+id/tv_titlephone1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone1_id"/>
    <EditText
        android:id="@+id/tv_phone1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_padding"
        app:layout_constraintLeft_toRightOf="@id/tv_titlephone1_id"
        app:layout_constraintTop_toBottomOf="@id/tv_family_id"
        />

    <TextView
        android:id="@+id/tv_titlephone2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone2_id"/>
    <EditText
        android:id="@+id/tv_phone2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_padding"
        app:layout_constraintLeft_toRightOf="@id/tv_titlephone2_id"
        app:layout_constraintTop_toBottomOf="@id/tv_phone1_id"/>

    <TextView
        android:id="@+id/tv_titleemail1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_email1_id"/>
    <EditText
        android:id="@+id/tv_email1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_padding"
        app:layout_constraintLeft_toRightOf="@id/tv_titleemail1_id"
        app:layout_constraintTop_toBottomOf="@id/tv_phone2_id"/>

    <TextView
        android:id="@+id/tv_titleemail2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_email2_id"/>
    <EditText
        android:id="@+id/tv_email2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_padding"
        app:layout_constraintLeft_toRightOf="@id/tv_titleemail2_id"
        app:layout_constraintTop_toBottomOf="@id/tv_email1_id"/>

    <Button
        android:id="@+id/btn_restore_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:text="@string/restore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_titleemail2_id"
        android:onClick="restore"
        />

</android.support.constraint.ConstraintLayout>
